{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyAdminStuff",
      "Effect": "Deny",
      "Action": [
        "*"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/ownership": "super-administrator"
        },
        "StringNotEquals": {
          "aws:ResourceTag/project": "saas"
        }
      }
    },
    {
      "Sid": "ECWorkspace",
      "Effect": "Allow",
      "Action": [
        "ec2:*"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringNotEquals": {
          "aws:ResourceTag/machinery": "workstations"
        }
      }
    },
    {
      "Sid": "S3AllowedTasks2",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation"
      ],
      "Resource": ["arn:aws:s3:::*"]
    },
    {
      "Sid": "S3AllowedTasks3",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": ["arn:aws:s3:::saasproj"],
      "Condition": {
        "StringEquals": {
          "s3:prefix": ["","instances"],
          "s3:delimiter": ["/"]
        }
      }
    },
    {
      "Sid": "S3AllowedTasks4",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": ["arn:aws:s3:::saasproj"],
      "Condition": {
        "StringLike": {
          "s3:prefix": "instances/*"
        }
      }
    },
    {
      "Sid": "S3AllowedTasks",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject*",
        "s3:GetObject*",
        "s3:DeleteObject*"
      ],
      "Resource": [
        "arn:aws:s3:::saasproj/instances/*", 
        "arn:aws:s3:::projectsaas/saas_admin/*"
      ]
    },
    {
      "Sid": "ChangePassword",
      "Effect": "Allow",
      "Resource": ["arn:aws:iam::357100702785:user/users/sfaisal_saas"],
      "Action": [
        "iam:ChangePassword"
      ]
    },
    {
      "Sid": "PolicyManagement",
      "Effect": "Allow",
      "Resource": ["*"],
      "Action": [
        "iam:ChangePassword",
        "iam:ListPolicies",
        "iam:ListRolePolicies",
        "iam:ListAttachedRolePolicies",
        "iam:ListInstanceProfilesForRole",
        "iam:CreateRole",
        "iam:TagRole",
        "iam:UntagRole",
        "iam:UpdateRole",
        "iam:UpdateRoleDescription",
        "iam:GetRole*",
        "iam:DeleteRole",
        "iam:DeleteInstanceProfile",
        "iam:CreateInstanceProfile",
        "iam:TagInstanceProfile",
        "iam:UntagInstanceProfile",
        "iam:UpdateAssumeRolePolicy",
        "iam:GetInstanceProfile",
        "iam:RemoveRoleFromInstanceProfile",
        "iam:AddRoleToInstanceProfile",
        "iam:*Policy*"
      ]
    }
  ]
}
