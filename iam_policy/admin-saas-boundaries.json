{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyAdminStuff",
      "Effect": "Deny",
      "Action": [
        "*"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/ownership": "super-administrator"
        },
        "StringNotEquals": {
          "aws:ResourceTag/project": "saas"
        }
      }
    },
    {
      "Sid": "ECWorkspace",
      "Effect": "Allow",
      "Action": [
        "ec2:*"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringNotEquals": {
          "aws:ResourceTag/machinery": "workstations"
        }
      }
    },
    {
      "Sid": "S3AllowedTasks",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::saasproj/instances/",
        "arn:aws:s3:::saasproj/instances/*", 
        "arn:aws:s3:::projectsaas/saas_admin/*"
      ]
    },
    {
      "Sid": "ChangePassword",
      "Effect": "Allow",
      "Resource": ["arn:aws:iam::357100702785:user/users/sfaisal_saas"],
      "Action": [
        "iam:ChangePassword"
      ]
    },
    {
      "Sid": "IAMAllowedTasks",
      "Effect": "Allow",
      "Resource":["*"],
      "Action": [
        "iam:CreatePolicy",
        "iam:CreateRole",
        "iam:AddRoleToInstanceProfile",
        "iam:RemoveRoleFromInstanceProfile",
        "iam:AttachRolePolicy",
        "iam:CreateInstanceProfile",
        "iam:DeleteInstanceProfile",
        "iam:DeletePolicy",
        "iam:DeleteRole",
        "iam:DetachRolePolicy",
        "iam:GetInstanceProfile",
        "iam:GetPolicy",
        "iam:GetRole",
        "iam:TagInstanceProfile",
        "iam:TagPolicy",
        "iam:TagRole",
        "iam:UntagInstanceProfile",
        "iam:UntagPolicy",
        "iam:UntagRole",
        "iam:UpdateRole",
        "iam:UpdateRoleDescription",
        "iam:UpdateAssumeRolePolicy",
        "iam:PassRole"
      ],
      "Condition":{
        "StringEquals": {
          "iam:PermissionsBoundary": "arn:aws:iam:357100702785:policy/instance-saas-boundaries"
        }
      }
    }
  ]
}
